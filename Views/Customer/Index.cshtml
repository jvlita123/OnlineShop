@model IEnumerable<Sklep_MVC_Projekt.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Postacie</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="customer-body">
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdressFlat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdressBuilding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdressStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdressCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdressCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdressFlat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdressBuilding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdressStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdressCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdressCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            <td>
                <a asp-action="EditCustomer" asp-route-id="@item.CustomerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>