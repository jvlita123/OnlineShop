@model Sklep_MVC_Projekt.Models.Product

@{
	ViewData["Title"] = "ProductDetails";
}

<h1>Product Details</h1>

<ul>
	@if (Model.Photo.Count > 0)
	{
		@foreach (var p in Model.Photo)
		{
			<li><img src="~/Photos/@p.Path" /></li>
		}
	}
</ul>

<div>
	<h4>Product</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ProductName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Price)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>
	</dl>
</div>

<div>
	@Html.ActionLink("Add to Shopping cart", "AddCustomerProduct", "CustomerProduct",new {id=Model.ProductID })
	<a asp-action="Index">Back to List</a>
</div>
