@model IEnumerable<Sklep_MVC_Projekt.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAdressFlat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAdressBuilding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAdressStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAdressCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAdressCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAdressFlat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAdressBuilding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAdressStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAdressCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAdressCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingMethod.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
            </td>
            <td>
                    <div style="display:flex;">
                        <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Details" asp-route-id="@item.OrderID"><img src="~/Photos/delete.png" style="height:30px;width:30px; " /></a>
                        <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="ChangeStatus" asp-route-id="@item.OrderID" asp-route-status="Accepted"><img src="~/Photos/accept.png" style="height:30px;width:30px; " /></a>
                        <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="ChangeStatus" asp-route-id="@item.OrderID" asp-route-status="Rejected"><img src="~/Photos/reject.png" style="height:30px;width:30px; " /></a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
